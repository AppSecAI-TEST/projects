<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fi.aalto.itmc.mobilesensingapp.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_sensing_button_main_view"
        android:id="@+id/start_sensing_button"
        android:layout_below="@+id/msg_rate_number_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_sensing_button_main_view"
        android:id="@+id/stop_sensing_button"
        android:layout_below="@+id/start_sensing_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/query_status_button_main_view"
        android:id="@+id/query_status_button"
        android:layout_below="@+id/active_sensors_textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/status_not_available_text_view"
        android:id="@+id/status_textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sensor_rate_text_view"
        android:id="@+id/sensor_rate_textView"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/query_status_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sending_msg_rate_text_view"
        android:id="@+id/msg_rate_textView"
        android:layout_below="@+id/sensor_rate_number_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:inputType="number"
        android:id="@+id/sensor_rate_number_editText"
        android:layout_below="@+id/sensor_rate_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:inputType="number"
        android:id="@+id/msg_rate_number_editText"
        android:layout_below="@+id/msg_rate_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/active_sensors_text_view"
        android:id="@+id/active_sensors_textView"
        android:layout_below="@+id/status_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_data_button_main_view"
        android:id="@+id/send_data_button"
        android:layout_above="@+id/status_data_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_data_button_main_view"
        android:id="@+id/status_data_button"
        android:layout_below="@+id/start_sensing_button"
        android:layout_alignRight="@+id/send_data_button"
        android:layout_alignEnd="@+id/send_data_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Uknown number of lines in db"
        android:id="@+id/status_data_textView"
        android:layout_below="@+id/stop_sensing_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp" />
</RelativeLayout>
